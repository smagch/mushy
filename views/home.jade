#wrapper      
  #content.clearfix
    #left-column
      #article
        label headline
        input#header-input
        label description
        textarea#description-input
        textarea#article-editor
        ol#article-list
    #right-column
      #search-tab
        ul                
          li
            a(href='#search-categories-twitter') twitter
          li
            a(href='#search-categories-facebook') facebook
        #search-categories-twitter
          span.button.selected search
          span.button image
          span.button user 
          span.button id         
        #search-categories-facebook
      input#search-input
      #search-content
        ul#search-content-related initial related
        ul#search-content-twitter-search.active initial search
        ul#search-content-twitter-user initial user
        ul#search-content-twitter-id initial id
        ul#search-content-twitter-image initial image
        ul#search-content-facebook initial facebook
script(id='twitter-list-template', type='text/template')
  | <% _.each(models, function(model) { %>
  |   <li class='tweet clearfix' data-model-id-str='<%= model.id_str %>'>
  |     <a href='http://twitter.com/<%= model.from_user %>' >
  |       <img src=<%= model.profile_image_url %> >
  |     </a>
  |     <div class='tweet-user'><%=model.from_user%></div>
  |     <div class='tweet-text'><%= model.text %></div>
  |   </li>
  | <% }); %>
