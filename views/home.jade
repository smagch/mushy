script(id='quote-list-template', type='text/template')
  | <% _.each(models, function(model) { %>
  |   <li class='article-item clearfix twitter-quote' data-model-cid='<%= model.cid %>'>
  |     <span class='delete-button' >x</span>
  |     <span class='add-button' >+</span>
  |     <% if(model.type === 'twitter') { %>
  |       <div class='twitter-quote-content clearfix'>
  |         <div class='tweet-user'><%= model.from_user %></div>
  |         <div class='tweet-text'><%= model.text %></div>
  |         <a href='http://twitter.com/<%= model.from_user %>' >
  |           <img src=<%= model.profile_image_url %> >
  |         </a>
  |       </div>
  |     <% } else if(model.type === 'text') { %>
  |       <div class='article-item-text'><%= marked(_.escape(model.text)) %></div>
  |     <% } else { %>
  |       <p>unknown type: <%= model.type %><p>
  |   <% } %>
  |   </li>
  | <% }); %>
