@import 'html5'

div
 display block
 margin 0
 padding 0

html, body
  margin 0
  padding 0

body 
  background #6B6B6B

input, textarea
  background-color transparent
  border 1px solid #292929
  outline none
  padding 6px
  display block
  width 94%
  resize none
  box-shadow(rgba(0, 0, 0, 0.2) 0 1px 2px 0 inset)

#wrapper
  width 100%
  height 100%

header-height = 0px
  

  
  
#content
  right-w = 520px
  #left-column
    position absolute
    border 1px solid black
    background #D4D4D4      
    top 0
    left 0
    bottom 0
    right right-w
    min-width 300px
  #right-column
    position absolute
    width right-w
    height 100%
    top header-height
    right 0

    
#article    
  margin 16px
  #header-input
    font-size 2em
  #description-input
    font-size 1.3em    
  #article-content
    width 100%
    
    li.tweet
      width 100%
      display block      
      list-style none
      border 1px solid #D2D2D2
      border-radius(4px)
      padding 0
      margin 0 auto      
      a
        float left
        margin 10px
      .tweet-user
        font-weight bold
        font-size 1.1em
        margin 4px 0 2px 4px
      .tweet-text
        margin 0 8px 8px 8px  

    
   
#search-form
  $active-background = #AAA  
  border-radius(9px)
  border 1px solid #999    
  padding 10px
  margin-bottom 9px  
  tab-height = 20px
  background $active-background
  #search-tab
    padding .2em .2em 0
    padding-bottom 0
    margin 0
    background #BCAAC0
    border 1px solid #0F0F0F      
    font-size 1.8em    
    border-radius(9px)      
    li
      white-space nowrap
      position relative
      top 1px
      display inline
      cursor pointer
      border-top-radius(4px)
      background #995356      
      border 1px solid #992927
      border-bottom 0 !important
      margin .2em 1px 0
      padding 0 .6em      
      &.selected
        background $active-background
        cursor default
        padding-bottom 1px
        margin-bootom 0              
  #search-categories
    min-height 20px
    line-height 20px
    margin 10px
    padding 0
    background $active-background
    li
      display none
      .button
        margin 0 4px
      &.active      
        display block           
  
#search-input  
  font-size 2em

#search-content      
  border-top-radius(9px)
  border 1px solid #999
  overflow-y auto
  position absolute
  top 200px
  bottom 0px  
  width 100%

  ul
    //margin 20px
    padding 0
    display none
    position relative
    &.active
      display block
    &.active.loding:after
      display block
      content ''
      width 100%
      height 100px
      background transparent url('../images/bigrotation2.gif') no-repeat center      
    li.image
      display inline-block
      vertical-align middle
      width 130px
      height 130px
      img
        max-width 120px
        max-height 120px
        display block


li.tweet
  display block
  list-style none
  border 1px solid #D2D2D2
  border-radius(4px)
  margin 12px 0
  padding 0      
  a
    float left
    margin 10px
  .tweet-user
    font-weight bold
    font-size 1.1em
    margin 4px 0 2px 4px
  .tweet-text
    margin 0 8px 8px 8px
  
.button
  border-radius(9px)
  display inline
  background #996969
  font-size 1.2em
  margin 1em
  padding .4em .4em
  cursor pointer
  &:hover
    background #999
  &.selected
    cursor default
    background #999
  
  
  